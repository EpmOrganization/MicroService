@using EPM.Model.DbModel
@model User

@*form表单
    form 里面的asp-action对应form表单提交以后执行哪个action，这里是执行Add
*@
<form asp-action="Add">
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="LoginName">账号</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="LoginName">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="Password">密码</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="Password">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="Name">姓名</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="MobileNumber">电话</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="MobileNumber">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="EmailAddress">邮箱</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="EmailAddress">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="DepartmentName">部门名称</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="DepartmentName">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="RoleName">角色</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="RoleName">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="Description">备注</label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="Description">
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 offset-md-2">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
</form>